---
import { PROFILE_SECTIONS } from "../data/profileSections";
import Link from "./Link.astro";
import ThemeToggle from "./ThemeToggle.astro";

const NAV_ITEMS = [
  ...PROFILE_SECTIONS,
  {
    title: "Contacto",
    label: "contacto",
    url: "mailto:loret.vaquero@gmail.com",
  },
];
---

<header class="header">
  <nav class="nav" id="menu-navegacion">
    {
      NAV_ITEMS.map((PROFILE_SECTION) => (
        <Link
          label={PROFILE_SECTION.label}
          url={PROFILE_SECTION.url}
          title={PROFILE_SECTION.title}
        />
      ))
    }
    <ThemeToggle />
  </nav>
</header>

<script>
  const ACTIVE_CLASS = "active-link";
  const links = document.querySelectorAll("#menu-navegacion a");

  const linkMap = new Map();
  links.forEach((link) => {
    const sectionId = link.getAttribute("aria-label");
    if (sectionId) {
      linkMap.set(sectionId, link);
    }
  });
  // 2. Funci贸n de Callback del Intersection Observer
  const callback = (entries: any[]) => {
    entries.forEach((entry) => {
      // Obtener el ID de la secci贸n observada (e.g., 'seccion1')
      const targetId = entry.target.id;

      // Obtener el link de navegaci贸n asociado
      const link = linkMap.get(targetId);

      if (link) {
        if (entry.isIntersecting) {
          links.forEach((l) => l.classList.remove(ACTIVE_CLASS));
          link.classList.add(ACTIVE_CLASS);
          console.log(`Secci贸n activa: ${targetId}`);
        } else {
          link.classList.remove(ACTIVE_CLASS);
        }
      }
    });
  };
  const options = {
    root: null,
    rootMargin: "0px 0px -50% 0px",
    threshold: 0,
  };

  const observer = new IntersectionObserver(callback, options);

  const sections = document.querySelectorAll("section");
  if (sections.length > 0) {
    sections.forEach((section) => {
      observer.observe(section);
    });
  } else {
    console.warn("No se encontraron secciones con ID para observar.");
  }
</script>

<style>
  .header {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 1rem 0;
    position: fixed;
    top: 0;
    z-index: 10;
    width: 100%;
  }

  .nav {
    display: flex;
    align-items: center;
    background-color: var(--bg-color);
    padding: 0 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    line-height: 1.25rem;
    font-weight: 500;
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }
  @keyframes nav-shadown {
    to {
      box-shadow:
        0 10px 15px -3px rgba(0, 0, 0, 0.1),
        0 4px 6px -2px rgba(0, 0, 0, 0.05);
      backdrop-filter: blur(8px);
      background-color: rgba(255, 255, 255, 0.5);
    }
  }

  @media (min-width: 768px) {
    .hero {
      margin: 1rem;
    }
    .nav {
      font-size: 1rem;
    }
  }
</style>
