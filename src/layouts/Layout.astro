---
import "@fontsource/onest/400.css";
import "@fontsource/onest/500.css";
import "@fontsource/onest/700.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Desarrolladora Web Frontend especializada en todo el ecosistema de JavaScript y frameworks como React, Next.js o Astro."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Loreto Vaquero - Frontend Developer</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;

    --max-width-tablet: 42rem;
    --max-width-laptop: 56rem;
    --small-spacing: 8px;
    --medium-spacing: 16px;
    --large-spacing: 24px;
    --xlarge-spacing: 48px;
    --large-border-radius: 1rem;
    --medium-border-radius: 0.75rem;
    --small-border-radius: 0.5rem;

    --bg-color: #f5f6fe;
    --font-primary-color: #1f2937;
    --font-secondary-color: #4b5563;
    --highlight-soft-color: #cdf3e1;
    --highlight-hard-color: #7cb09a;
  }
  html {
    font-family: "Onest", system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  body {
    background: var(--bg-color);
    color: var(--font-primary-color);
    display: flex;
    flex-direction: column;
    margin: 0;
  }

  ol {
    padding: 0;
    margin: 0;
  }

  li {
    display: block;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
  }

  time {
    padding: 0;
    margin: 0;
  }
  body.darkmode {
    background: #13172b;
    color: #ffffff;
    display: flex;
    flex-direction: column;
  }
</style>
